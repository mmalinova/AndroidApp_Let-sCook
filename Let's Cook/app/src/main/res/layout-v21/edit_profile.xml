<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/firstTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@color/red"
            android:text="@string/fieldReq"
            android:textColor="@color/background"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/editName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="4dp"
            android:background="@color/editTextBackground"
            android:hint="@string/nameToEdit"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:overScrollMode="always"
            android:padding="8dp"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textColorHint="@color/required"
            android:textSize="14sp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstTextView" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@color/editTextBackground"
            android:hint="@string/emailToEdit"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:overScrollMode="always"
            android:padding="8dp"
            android:scrollbars="horizontal"
            android:textColor="@color/black"
            android:textColorHint="@color/required"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/editName"
            tools:layout_editor_absoluteX="2dp" />

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/backgroundBtn"
            android:text="@string/editBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editEmail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>