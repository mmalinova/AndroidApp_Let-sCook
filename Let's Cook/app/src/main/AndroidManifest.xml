<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.letscook">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">

        <activity
            android:name=".view.slider.SliderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.register.SignUpActivity"
            android:theme="@style/Register" />
        <activity
            android:name=".view.home.MainActivity"
            android:theme="@style/MainTheme">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.home.MainActivity" />
        </activity>
        <activity
            android:name=".view.login.LoginActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.search.WhatToCookActivity"
            android:parentActivityName=".view.home.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".view.info.TermsOfUseActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.products.ShoppingListActivity"
            android:parentActivityName=".view.home.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".ContactsActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".AddRecipeActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.products.MyProductsActivity"
            android:parentActivityName=".view.home.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".view.info.InfoActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".LastAddedActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.userRecipes.LastViewedActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.userRecipes.FavoriteActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.userRecipes.MyRecipesActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.search.SearchActivity"
            android:parentActivityName=".view.home.MainActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".view.profile.ProfileActivity"
            android:parentActivityName=".view.home.MainActivity" />
        <activity
            android:name=".view.recipesDashboard.RecipesActivity" />
        <activity
            android:name=".view.recipeDetails.RecipeActivity"
            android:parentActivityName=".view.recipesDashboard.RecipesActivity" />
        <activity
            android:name=".view.info.DataPolicyActivity"
            android:parentActivityName=".view.home.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>